{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./public/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "jsx": "react"
  },
  "include": [
    "./src/**/*"
  ]
}